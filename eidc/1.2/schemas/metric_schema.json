{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://deepaucksharma.github.io/eidc-tfk8s/schemas/metric_schema.json",
  "title": "EIDC Metric Schema",
  "description": "Meta-schema for validating EIDC metric definitions",
  "type": "object",
  "required": ["title", "description", "version", "metrics"],
  "properties": {
    "title": {
      "type": "string",
      "description": "The title of the schema"
    },
    "description": {
      "type": "string",
      "description": "A detailed description of the schema's purpose"
    },
    "version": {
      "type": "string",
      "description": "The version of the schema",
      "pattern": "^\\d+\\.\\d+(\\.\\d+)?$"
    },
    "metrics": {
      "type": "array",
      "description": "An array of metric definitions",
      "items": {
        "type": "object",
        "required": ["name", "description", "type", "attributes"],
        "properties": {
          "name": {
            "type": "string",
            "description": "The name of the metric"
          },
          "description": {
            "type": "string",
            "description": "A detailed description of the metric"
          },
          "type": {
            "type": "string",
            "description": "The metric type",
            "enum": ["gauge", "sum", "histogram"]
          },
          "unit": {
            "type": "string",
            "description": "The unit of measurement"
          },
          "attributes": {
            "type": "array",
            "description": "Attributes associated with this metric",
            "items": {
              "type": "object",
              "required": ["name", "description", "type"],
              "properties": {
                "name": {
                  "type": "string",
                  "description": "The name of the attribute"
                },
                "description": {
                  "type": "string",
                  "description": "A detailed description of the attribute"
                },
                "type": {
                  "type": "string",
                  "description": "The data type of the attribute",
                  "enum": ["string", "int", "double", "bool"]
                },
                "required": {
                  "type": "boolean",
                  "description": "Whether this attribute is required",
                  "default": false
                },
                "enum": {
                  "type": "array",
                  "description": "Allowed values for this attribute"
                },
                "example": {
                  "description": "Example value for this attribute"
                }
              }
            }
          },
          "aggregation": {
            "type": "object",
            "description": "Aggregation configuration",
            "properties": {
              "temporality": {
                "type": "string",
                "enum": ["delta", "cumulative"]
              },
              "monotonic": {
                "type": "boolean"
              }
            }
          }
        }
      }
    },
    "examples": {
      "type": "array",
      "description": "Example metric instances",
      "items": {
        "type": "object"
      }
    },
    "security": {
      "type": "object",
      "description": "Security considerations for these metrics",
      "properties": {
        "pii_fields": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "privacy_notes": {
          "type": "string"
        }
      }
    }
  }
}
